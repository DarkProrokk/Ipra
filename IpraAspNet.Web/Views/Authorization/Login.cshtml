@using IpraAspNet.Application.AuthenticationService;
@model AuthenticationModel

@{
    ViewBag.Title = "Вход на сайт";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="bg-image">
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="z-1 px-5 py-4 transparent-bg">
            <div class="row d-flex align-items-center">
                <div class="col-7">
                    <div class="title-block">
                        <h1 class="login-page-title-h1">МЕДОРИ</h1>
                        <h2 class="login-page-title">
                            МЕДИЦИНСКИЙ<br>
                            ДОКУМЕНТООБОРОТ<br>
                            ПО РЕАБИЛИТАЦИИ<br>
                            ИНВАЛИДОВ
                        </h2>
                    </div>
                </div>
                <div class="col-5">
                    <form>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="email" id="form2Example18" class="form-control form-control-lg" placeholder="Логин" />
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="password" id="form2Example28" class="form-control form-control-lg" placeholder="Пароль" />
                        </div>

                        <button type="submit" class="btn btn-info btn-lg text-light col-lg-12">Войти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

